<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="4"
    android:layout_row="4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="247dp">

        <TextView
            android:id="@+id/txtHistory"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center|end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center|end"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rowCount="5"
            app:columnCount="4">


            <Button
                android:id="@+id/btnAC"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="AC"
                android:textSize="30sp"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnWeight="1"
                />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="Del"
                android:textSize="30sp"
                app:layout_row="0"
                app:layout_column="1"
                app:layout_columnWeight="1"
                />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="30sp"
                app:layout_row="0"
                app:layout_column="2"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="30sp"
                app:layout_row="0"
                app:layout_column="3"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="30sp"
                app:layout_row="1"
                app:layout_column="3"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="30sp"
                app:layout_row="2"
                app:layout_column="2"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="30sp"
                app:layout_row="2"
                app:layout_column="1"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="30sp"
                app:layout_row="2"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="30sp"
                app:layout_row="2"
                app:layout_column="3"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="30sp"
                app:layout_row="1"
                app:layout_column="2"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="30sp"
                app:layout_row="1"
                app:layout_column="1"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="30sp"
                app:layout_row="1"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="30sp"
                app:layout_row="3"
                app:layout_column="2"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="30sp"
                app:layout_row="3"
                app:layout_column="1"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="30sp"
                app:layout_row="3"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="="
                android:textSize="30sp"
                app:layout_row="3"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_rowSpan="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="."
                android:textSize="30sp"
                app:layout_row="4"
                app:layout_column="0"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="30sp"
                app:layout_row="4"
                app:layout_column="1"
                app:layout_columnWeight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                app:layout_columnSpan="2"
                />





        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>